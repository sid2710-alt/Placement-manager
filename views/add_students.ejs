<div class="head" style="margin-top: 20px">
    <h1>Add Student</h1>
  </div>
  
  <div class="form">
    <form action="/student/create" method="POST">
      <div class="form-input">
        <input type="text" name="name" placeholder="Student name" required />
      </div>
      <div class="form-input">
        <input type="text" name="email" placeholder="Student email" required />
      </div>
      <div class="form-input">
        <input type="text" name="college" placeholder="Student college" required />
      </div>
      <div class="form-input">
        <input type="text" name="batch" placeholder="Student Batch" required />
      </div>
      <div class="form-input">
        <select class="form-input" name="status">
          <optgroup label="Status" placeholder="Status">
            <!-- <option name="" value="0">Status</option> -->
            <option name="placed" value="Placed">Placed</option>
            <option name="Not placed" value="Not Placed">Not Placed</option>
          </optgroup>
        </select>
      </div>
      <div class="threeInput threeSubInput">
        <div class="form-input">
          <input
            class="subInput"
            type="integer"
            minValue="0"
            max="100"
            name="DSA"
            placeholder="DSA Score"
            required
          />
        </div>
        <div class="form-input">
          <input
            class="subInput"
            type="integer"
            minValue="100"
            max="100"
            name="MERN"
            placeholder="MERN Score"
            required
          />
        </div>
        <div class="form-input">
          <input
            class="subInput"
            type="integer"
            minValue="100"
            max="100"
            name="APP_DEV"
            placeholder="ANdroid Score"
            required
          />
        </div>
      </div>
     
      <div class="form-input">
        <input type="Submit" value="Add Student" />
      </div>
      <div class="studentCardActions">
        <div class="cardLinks">
          <a href="/">Back</a>
        </div>
      </div>
      <!-- <button>Submit</button> -->
    </form>
  </div>
